<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.experiment.mapper.ExamMapper">
    
    <resultMap id="ExamResultMap" type="com.experiment.pojo.Exam">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="type" property="type"/>
        <result column="duration" property="duration"/>
        <result column="total_score" property="totalScore"/>
        <result column="course_id" property="courseId"/>
        <result column="teacher_id" property="teacherId"/>
        <result column="status" property="status"/>
        <result column="start_time" property="startTime"/>
        <result column="end_time" property="endTime"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    
    <insert id="insert" parameterType="com.experiment.pojo.Exam" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO exam (name, type, duration, total_score, course_id, teacher_id, status, start_time, end_time, create_time, update_time)
        VALUES (#{name}, #{type}, #{duration}, #{totalScore}, #{courseId}, #{teacherId}, #{status}, #{startTime}, #{endTime}, #{createTime}, #{updateTime})
    </insert>
    
    <select id="selectById" resultMap="ExamResultMap">
        SELECT * FROM exam WHERE id = #{id}
    </select>
    
    <select id="selectByTeacherId" resultMap="ExamResultMap">
        SELECT * FROM exam WHERE teacher_id = #{teacherId} ORDER BY create_time DESC
    </select>
    
    <select id="selectByCourseId" resultMap="ExamResultMap">
        SELECT * FROM exam WHERE course_id = #{courseId} ORDER BY create_time DESC
    </select>
    
    <select id="selectPublishedByCourseId" resultMap="ExamResultMap">
        SELECT * FROM exam WHERE course_id = #{courseId} AND status = 'published' ORDER BY create_time DESC
    </select>
    
    <update id="update" parameterType="com.experiment.pojo.Exam">
        UPDATE exam 
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="type != null">type = #{type},</if>
            <if test="duration != null">duration = #{duration},</if>
            <if test="totalScore != null">total_score = #{totalScore},</if>
            <if test="courseId != null">course_id = #{courseId},</if>
            <if test="teacherId != null">teacher_id = #{teacherId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="updateTime != null">update_time = #{updateTime}</if>
        </set>
        WHERE id = #{id}
    </update>
    
    <!-- 专门用于更新考试状态的方法 -->
    <update id="updateStatus">
        UPDATE exam 
        SET status = #{status}, update_time = #{updateTime}
        WHERE id = #{id}
    </update>
    
    <delete id="deleteById">
        DELETE FROM exam WHERE id = #{id}
    </delete>
    
    <select id="selectByPage" resultMap="ExamResultMap">
        SELECT * FROM exam ORDER BY create_time DESC LIMIT #{offset}, #{limit}
    </select>
    
    <select id="countTotal" resultType="int">
        SELECT COUNT(*) FROM exam
    </select>
    
</mapper> 